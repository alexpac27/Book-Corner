<div id = "home-wrapper">
  <div class = "create-account-container hero">
    <div class = "moto">
      <h2>
        We have <span>hundreds</span> of <br>books and reviews, <br>join us!
      </h2>
    </div>
    <div class = "create-account-form">
      <% if @current_user%>
        <%@current_user%>
      <%else%>
        <h2>Create a free account!</h2>
        <%= form_with model: User.new, method: :post, html: {autocomplete: "off"} do |f| %>
          <%= f.text_field :name, placeholder: "Name", required: :required %>
          <%= f.email_field :email, placeholder: "example@gmail.com", required: :required %>
          <%= f.password_field :password, placeholder: "Password", required: :required %>
          <%= f.submit "Sign Up" %>
        <% end %>
      <%end%>
      <% if flash[:errors]%>
          <% flash[:errors].each do |error|%>
          <p class = "error-message"><%= error %></p>
          <%end%>
      <%end%>
    </div>
  </div>


  <div class = "features-preview">
