<div id = "user-wrapper">
  <div class = "user-header">
    <img src = <%= image_url(@user.avatar_url) %> alt="">
    <div class = "user-details">
      <h2><%= @user.name %></h2>
      <div class = "divider"></div>

      <p class = "reviews-count"><%= @user.reviews.count %> reviews <br> <%= @user.books.count %> books on shelf</p>
    </div>
  </div>

  <div class = "recent-reviews">
    <h2>Recent Reviews</h2>
    <% [5, @user.reviews.count].min.times do |index| %>
      <div class = "stars">
        <% @user.reviews[index].rating.times do %>
          <span class="fa fa-star checked"></span>
        <% end %>
        <% (5 - @user.reviews[index].rating).times do %>
          <span class="fa fa-star"></span>
        <% end %>
      </div>
      <p><%= @user.reviews[index].content %></p>
    <% end %>
  </div>

  <div class = "user-books">
    <h2>Book Shelf</h2>
    <% @user.books.each do |book| %>
      <img src= <%= book.image_link %> alt="">
    <% end %>
  </div>

</div>
